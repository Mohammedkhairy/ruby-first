<% if !user_signed_in? %>
  <div class="jumbotron">
  <h1>Your Favorite Movie Reviewed</h1> 
  <p>sign up to see the review of your favourite movies.... </p>
  <p><%= link_to "Sign Up To Write A Review",new_user_registration_path , class: "btn btn-primary btn-lg" %> </p> 
  </div>
<% end %>
<div class="row">
  <% @movies.each do |m|%>
  <div class="col-sm-6 col-md-3">
    <div class="thumbnail">
        <%= link_to (image_tag m.image.url , class: "image"), movie_path(m.id) %>
        <h4 class="text-center"><%= m.title %></h4>
    </div>
  </div>
  <% end %>
</div>